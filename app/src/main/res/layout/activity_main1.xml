<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C8E6C9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_search_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_add_24" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#E83D5A80"
            android:textSize="28sp"
            android:layout_marginLeft="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp">
                <RelativeLayout
                    android:id="@+id/img_student"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgstudent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="27dp"
                        android:text="Quản lý học sinh"
                        android:textAllCaps="true"
                        android:textColor="#EAEAEA"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_detailStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#00ff0000"
                        android:elevation="0dp"
                        android:padding="20dp"
                        android:text="Chi tiết"
                        android:textAllCaps="false"
                        android:textColor="#EAEAEA" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp">

                <RelativeLayout
                    android:id="@+id/img_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgclass">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:padding="27dp"
                        android:text="Quản lý lớp học"
                        android:textAllCaps="true"
                        android:textColor="#EAEAEA"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_detailClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="#00ff0000"
                        android:padding="20dp"
                        android:text="Chi tiết"
                        android:textAllCaps="false"
                        android:textColor="#EAEAEA" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin chung"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#E83D5A80"
            android:textSize="28sp"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="160dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="15dp"
                android:elevation="3dp">
                <RelativeLayout
                    android:id="@+id/img_total_student"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/totalstudent">

                    <TextView
                        android:id="@+id/lblAmountStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:text="23 Học sinh"
                        android:textStyle="bold"
                        android:textColor="#F8F8F8"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="160dp"
                app:cardCornerRadius="15dp"
                android:elevation="3dp"
                android:layout_margin="15dp">

                <RelativeLayout
                    android:id="@+id/img_total_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/totalclass">

                    <TextView
                        android:id="@+id/lblAmountClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:text="23 Lớp"
                        android:textStyle="bold"
                        android:textColor="#F8F8F8"
                        android:textSize="19sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>